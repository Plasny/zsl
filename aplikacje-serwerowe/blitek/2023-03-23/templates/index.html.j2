{% extends "bootstrap/base.html" %}

{% block scripts %}
    {{ super() }}
{% endblock %}

{% block title %}
    {{ title }}
{% endblock %}

{% block navbar %}
    {% include "includes/navbar.html.j2" %}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row mt-3">
            {% include "includes/search.html.j2" %}
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Login</th>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.userLogin }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="row mt-3 mx-2 d-flex">
            <a href="/add-user" class="btn btn-outline-primary btn-lg btn-block" role="button">Dodaj użytkownika</a>
        </div>
    </div>
{% endblock %}
